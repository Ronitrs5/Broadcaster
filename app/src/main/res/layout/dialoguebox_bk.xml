<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@drawable/dialog_bk"

    android:padding="20dp"
    android:id="@+id/dialogbk">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogbktitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/amaranth_bold"
            android:text="Do you want to broadcast this message?"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialognobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bk"
        android:text="NO"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dialogbktitle"
        app:layout_constraintTop_toBottomOf="@+id/dialogbktitle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialogyesbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="YES"
        android:background="@drawable/btn_bk"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="@+id/dialogbktitle"
        app:layout_constraintTop_toBottomOf="@+id/dialogbktitle" />

</androidx.constraintlayout.widget.ConstraintLayout>